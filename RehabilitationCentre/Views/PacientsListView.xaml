<UserControl x:Class="RehabilitationCentre.Views.PacientsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RehabilitationCentre.Views"
             xmlns:ValueConverters="clr-namespace:Core.Types.Enumerations;assembly=Core"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ValueConverters:EnumDescriptionConverter x:Key="vcEnumToString" />
        </ResourceDictionary>
    </UserControl.Resources>

    <materialDesign:DialogHost>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <materialDesign:Card
                Grid.Row="0">
                <Expander
                    HorizontalAlignment="Stretch"
                    Header="Фильтры">
                </Expander>
            </materialDesign:Card>
            <ProgressBar
                Grid.Row="1"
                IsIndeterminate="True" />

            <DataGrid
                Grid.Row="2"
                CanUserSortColumns="True"
                CanUserAddRows="False"
                AutoGenerateColumns="False"
                materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                HeadersVisibility="Column"
                x:Name="Pacients">
                <DataGrid.Columns>

                    <DataGridTemplateColumn
                        Header="Пациент">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel
                                    Margin="10">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Account" Margin="0,0,10,0" />
                                        <TextBox Text="{Binding LastName}" Margin="0,0,5,0" />
                                        <TextBox Text="{Binding FistName}" Margin="0,0,5,0" />
                                        <TextBox Text="{Binding PatronymicName}" Margin="0,0,5,0" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn
                        Header="Тип пациента"
                        Binding="{Binding PacientType, Converter={StaticResource vcEnumToString}}" />

                    <DataGridTemplateColumn
                        Header="Телефоны">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel
                                    Margin="10">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="PhoneClassic" Margin="0,0,10,0" />
                                        <TextBox Text="{Binding PacientPhoneNumber, StringFormat='Номер пацента: {0}'}" />
                                    </StackPanel>
                                    <TextBox Text="{Binding PacientPhoneNumber, StringFormat='Номер родителей: {0}'}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn
                        Header="Родители">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel
                                    Margin="10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Text="{Binding ParentLastName}" Margin="0,0,5,0" />
                                        <TextBox Text="{Binding ParentFirstName}" Margin="0,0,5,0" />
                                        <TextBox Text="{Binding ParentPatronymicName}" Margin="0,0,5,0" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel
                                    Margin="10">
                                    <Button
                                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                                        Width="200">
                                        Просмотреть документ пациента
                                    </Button>

                                    <Button
                                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                                        Width="200">
                                        Отметить посещение
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </materialDesign:DialogHost>
</UserControl>